<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Boris Johnsn"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp" android:id="@+id/tv_link_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_launch"/>
    <TextView
            android:text="www.google.com"
            android:layout_marginStart="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_link_title"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_link_descrp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintEnd_toStartOf="@+id/iv_launch"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_launch"
            android:id="@+id/iv_launch"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/tv_link_title"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>