<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Application Version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_app_ver_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toTopOf="@+id/tv_appversion"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0" android:fontFamily="@font/roboto" android:textColor="#000"/>
    <TextView
            android:text="MaggTap 1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_appversion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toTopOf="@+id/divider3"
            android:layout_marginBottom="8dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_search"
            app:layout_constraintBottom_toTopOf="@+id/tv_os_title"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Operating System"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_os_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_os_version" android:textColor="#000"
            android:fontFamily="@font/roboto"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_os_version" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toTopOf="@+id/divider4"
            android:layout_marginBottom="8dp"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/tv_leagal_info"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Legal Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_leagal_info" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_legal_info_sub" android:textColor="#000"
            android:fontFamily="@font/roboto"/>
    <TextView
            android:text="Copyright 2019, MagTapp Technologies Pvt. Ltd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_legal_info_sub" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toTopOf="@+id/divider5"
            android:layout_marginBottom="8dp"/>
    <View
            android:id="@+id/divider5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="542dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>