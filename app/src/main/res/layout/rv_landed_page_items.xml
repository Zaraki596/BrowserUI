<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_histry_web_placeholder"
                android:layout_width="35dp" android:layout_height="35dp"
                android:src="@drawable/testpic"
                app:civ_border_width="1dp"
                app:civ_border_color="#494949"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_histry_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_history_link"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <TextView
                android:text="History Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_histry_title" android:textSize="16sp"
                android:textColor="#000" android:fontFamily="@font/roboto"
                app:layout_constraintStart_toEndOf="@+id/civ_histry_web_placeholder" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_history_link" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_histry_cancel" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="www.historylink.com"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_link"
                android:fontFamily="@font/roboto" app:layout_constraintStart_toEndOf="@+id/civ_histry_web_placeholder"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/iv_histry_cancel"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_cancel_black_24dp"
                android:id="@+id/iv_histry_cancel" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/tv_histry_title" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_history_link" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>